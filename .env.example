# CineSync v2 Environment Configuration
# Copy this file to .env and fill in your actual API keys

# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_PREFIX=!

# Database Configuration (used by Docker Compose and application)
DB_HOST=localhost
DB_NAME=cinesync
DB_USER=postgres
DB_PASSWORD=your_secure_database_password_here
DB_PORT=5432

# PostgreSQL Docker Configuration (same as above, but using standard env var names)
POSTGRES_DB=cinesync
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_database_password_here

# API Keys for Dataset Enhancement
TMDB_API_KEY=your_tmdb_api_key_here
TRAKT_API_KEY=your_trakt_api_key_here
TVMAZE_API_KEY=not_required_for_tvmaze
OMDB_API_KEY=your_omdb_api_key_here

# JustWatch API (via RapidAPI)
JUSTWATCH_API_KEY=your_rapidapi_key_here
JUSTWATCH_API_HOST=streaming-availability.p.rapidapi.com

# AniList API (GraphQL - no key required, but can set user agent)
ANILIST_USER_AGENT=CineSync/2.0

# Model Configuration
MODEL_EMBEDDING_DIM=64
MODEL_HIDDEN_DIM=128
MODEL_EPOCHS=10
MODEL_BATCH_SIZE=1024
MODEL_LEARNING_RATE=0.001
MODELS_DIR=models

# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=3000
API_BASE_URL=http://localhost:3000

# Development Settings
DEBUG=false
LOG_LEVEL=INFO

# Rate Limiting Settings (optional overrides)
TMDB_REQUESTS_PER_SECOND=2.5
TRAKT_REQUESTS_PER_SECOND=0.5
TVMAZE_REQUESTS_PER_SECOND=1.0

# Cache Settings
CACHE_TIMEOUT=3600
ENABLE_CACHING=true

# Training Configuration (for lupe(python) directory)
DEVICE=auto
BATCH_SIZE=64
LEARNING_RATE=0.001
EPOCHS=20
USE_CUDA=true